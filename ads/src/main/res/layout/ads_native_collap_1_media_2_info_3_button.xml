<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_unit_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/native_custom_bg">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Native.AdButton"
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:paddingVertical="12dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/native_ad_icon_load"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@id/ad_call_to_action"
            app:layout_constraintTop_toTopOf="@id/ad_headline"/>

        <TextView
            style="@style/Native.AdHeadline"
            android:id="@+id/ad_headline"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/native_ad_icon_load"
            app:layout_constraintBottom_toTopOf="@id/tv_icon"/>

        <TextView
            android:id="@+id/tv_icon"
            style="@style/Native.AdIcon"
            app:layout_constraintStart_toStartOf="@id/ad_headline"
            app:layout_constraintTop_toTopOf="@id/ad_body" />

        <TextView
            style="@style/Native.AdBody"
            android:id="@+id/ad_body"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="@id/ad_call_to_action"
            app:layout_constraintStart_toEndOf="@id/tv_icon"
            app:layout_constraintBottom_toTopOf="@id/ad_call_to_action" />

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ad_headline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
