<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_unit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/native_custom_bg"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_marginEnd="12dp"
                android:background="@color/lightTransparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ad_call_to_action"
                app:layout_constraintTop_toBottomOf="@id/tv_icon"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_icon"
                style="@style/Native.AdIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                style="@style/Native.AdHeadline"
                android:id="@+id/ad_headline"
                android:layout_height="30dp"
                android:background="@color/lightTransparent"
                app:layout_constraintEnd_toEndOf="@id/ad_call_to_action"
                app:layout_constraintStart_toStartOf="@id/ad_call_to_action"
                app:layout_constraintTop_toTopOf="@id/ad_media" />

            <TextView
                style="@style/Native.AdBody"
                android:id="@+id/ad_body"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@color/lightTransparent"
                app:layout_constraintEnd_toEndOf="@id/ad_call_to_action"
                app:layout_constraintStart_toStartOf="@id/ad_call_to_action"
                app:layout_constraintTop_toBottomOf="@id/ad_headline" />

            <View
                style="@style/Native.AdButton"
                android:id="@+id/ad_call_to_action"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/lightTransparent"
                app:layout_constraintTop_toBottomOf="@+id/ad_body"
                app:layout_constraintEnd_toStartOf="@id/ad_media"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>
